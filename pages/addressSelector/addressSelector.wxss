/* pages/addressSelector/addressSelector.wxss */
page{
  background: #ffffff;
}
.top{
  width: 100%;
  box-sizing: border-box;
  /* padding:0 10rpx; */
  display: flex;
  justify-content: space-between;
  align-items: center;
  z-index: 3;
  background: white;
  top: 0;
}
.top>view{
  display: flex;
  align-items: center;
  height: 36px;
  text-align: center;
  line-height: 36px;
}
.originRight{
  font-weight:550;
  font-size: 30rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  display: flex;
}
.search{
  background: #f0f0f0;
  height: 60rpx;
  border-radius: 6rpx;
  width: 100%;
  font-size: 15px;
  display: flex;
  align-items: center; 
}
.notice{
  width: 100%;
  box-sizing: border-box;
  padding:0 30rpx;
  font-size: 24rpx;
  background: #f6e6c6;
  height: 60rpx;
  line-height: 60rpx;
}
.title{
  width: 100%;
  box-sizing: border-box;
  padding: 0 30rpx;
  font-size: 24rpx;
  height: 60rpx;
  line-height: 60rpx;
}
.content{
  width: 100%;
  display: -webkit-flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  padding: 0 30rpx;
  font-size: 30rpx;
  background: white;
  height: 90rpx;
}
.origin{
  color: #ff4e4e;
  display: -webkit-flex;
  align-items: center;
  white-space: nowrap;
}
.origin view{
  margin-right: 10rpx;
}
.default-address{
  width: 100%;
  background: white;
  position: relative;
  height: 130rpx;
}
.icon-view{
  width:0;
  height:0;
  border-width: 48rpx 0 48rpx 48rpx  ;
  transform: rotate(180deg);
  border-style:solid;
  border-color:transparent transparent #ff4c4d;/*透明 透明  灰*/
  position:relative;
 
}
.icon-view view{
  font-size:30rpx;
  position:absolute;
  top:18rpx;
  color:white;
  transform: rotate(180deg);
  left:-30rpx;

}
.address-info{
  width: 70%;
  height: 130rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  overflow: hidden;
}
.address-detail{
  font-size: 30rpx;
  font-weight: 600;
  white-space: nowrap;
  overflow: hidden;
}
.address-concat{
  font-size: 24rpx;
}
.content-view{
  width: 100%;
}
.divLine{
  margin-top: 24rpx;
 background:#F7F7F7;
 width: 100%;
 height: 5rpx;
} 