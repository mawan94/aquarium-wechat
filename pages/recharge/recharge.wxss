page{
  background: #f9f9f9;
}
.recharge-header{
  width: 100%;
  height: 400rpx;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}
.background{
  width: 100%;
  height: 100%;
  background: lightgreen;
  position: absolute;
  left: 0;
  top: 0;
}
.background image{
  width: 100%;
  height: 100%;
}
.text-money {
  font-size: 50rpx;
  position: absolute;
  z-index: 2
}
.text-left{
  position: absolute;
  left: 30rpx;
  top: 20rpx;
}
.text-right{
  position: absolute;
  right: 30rpx;
  top: 20rpx;
}
.recharge-money{
  width: 100%;
  padding: 0 30rpx;
  margin-top: 50rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.topnull{
  margin-top: 20rpx;
}
.money-list{
 width: 210rpx;
 height: 150rpx;
 border: 1rpx solid #000;
 border-radius: 8rpx;
 margin-bottom: 30rpx;
 display: flex;
 flex-direction: column;
 align-items: center;
 justify-content: center;
}
.activeindex{
  border: 1rpx solid red;
}
.money{
  color: #000;
  font-size: 32rpx;
}
.give{
  color: gray;
  font-size: 28rpx;
}
.give image{
  width: 35rpx;
  height: 20rpx;
}
.inputview{
  width: 690rpx;
  height: 200rpx;
  background: #fff;
  position: relative;
  border: 1px solid red;
  margin: 0 auto;
  border-radius: 10rpx;
}
.inputview::before{
  content: '';
    display: inline-block;
    box-sizing: border-box;
    width: 24rpx;
    height: 24rpx;
    border: 1rpx solid red;
    border-radius: 3rpx;
    position: absolute;
    background-color: inherit;
    border-right-color: #fff;
    border-bottom-color: #fff;
    right: 100rpx;
    top: -14rpx;
    transform: rotate(45deg);
}
.input{
  width: 650rpx;
  height: 80rpx;
  line-height: 78rpx;
  margin: 25rpx auto;
  display: flex;
}
.input .writeinput {
  width: 450rpx;
  height: 80rpx;
  
}
.writeinput input{
  width: 100%;
  height: 100%;
  border: 1rpx solid rgb(111, 111, 111);
  box-sizing: border-box;
  padding-left: 20rpx;
}
.button {
  width: 200rpx;
  height: 80rpx;
  background:rgb(111, 111, 111);
  text-align: center;
  color: #Fff;
  font-size: 28rpx;
  line-height: 78rpx;
}
.buttonActive{
  background: red;
}
.title{
  padding-left: 30rpx;
  margin-top: 20rpx;
  font-size: 32rpx;
}
