page{
  background: #f0f0f0;
}
.login-btn{
  font-size: 30rpx;
  box-sizing: border-box;
  padding:0 100rpx;
  height: 90rpx;
  line-height: 90rpx;
  color: white;
  border-radius: 100rpx;
  text-align: center;
  background: #38d160;
  border: 1px solid #f0f0f0;
}
.container{
  width: 100%;
  padding: 0;
  display: flex;
  justify-content: center;
  flex-direction: column;
}
.containerTop{
  width: 100%;
  border-bottom: 10px solid #f0f0f0;
  background: white;
}
.select{
  margin: auto;
  width: 100%;
  box-sizing: border-box;
  padding: 30rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  align-items: flex-start;
  padding-bottom:0
}
